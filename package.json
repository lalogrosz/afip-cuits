{
  "name": "node-typescript-starter",
  "version": "3.0.0",
  "description": "",
  "scripts": {
    "tsc:watch": "tsc -w",
    "postinstall": "npm run build",
    "build": "tsc --outDir public && npm run postbuild",
    "postbuild": "copyfiles -f src/**/*.html src/**/*.css dist/ && copyfiles -f src/cache/* dist/cache && echo \"$KEY\" > dist/certificate.key && echo \"$CERT\" > dist/certificate-prod.crt",
    "start": "cd dist && node main.js",
    "serve": "nodemon --inspect --watch dist/ -d 1 ./dist/main.js",
    "test": "mocha dist/test"
  },
  "author": "marcin.baraniecki@softwaremill.com",
  "license": "ISC",
  "dependencies": {
    "afip-apis": "^0.5.3",
    "express": "^4.17.1",
    "json2csv": "^5.0.0",
    "moment": "^2.24.0",
    "node-cache": "^5.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/node": "^10.17.17",
    "chai": "~3.5.0",
    "copyfiles": "^2.2.0",
    "nodemon": "^2.0.22",
    "typescript": "^3.7.3"
  }
}
