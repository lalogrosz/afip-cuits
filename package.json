  "license": "ISC",
  "dependencies": {
    "afip-apis": "^0.3.4",
    "express": "^4.17.1",
    "json2csv": "^5.0.0",
    "moment": "^2.24.0",
    "node-cache": "^5.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/node": "^10.17.17",
    "chai": "~3.5.0",
    "copyfiles": "^2.2.0",
    "nodemon": "~1.17.5",
    "typescript": "^3.7.3"
  }
}
